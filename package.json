{
  "name": "halo-mvp",
  "version": "1.0.0",
  "description": "Agentic Payments Orchestrator - Halo MVP",
  "main": "src/index.ts",
  "workspaces": [
    "react-frontend"
  ],
  "scripts": {
    "start": "cross-env PORT=8082 ts-node src/index.ts",
    "test": "jest",
    "client": "npm run dev --prefix react-frontend",
    "build": "npm run build --workspace=react-frontend",
    "dev": "concurrently \"npm run start\" \"npm run client\""
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/nodemailer": "^7.0.9",
    "ajv": "^8.17.1",
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.6",
    "express": "^4.17.1",
    "google-auth-library": "^10.5.0",
    "nodemailer": "^7.0.13",
    "stripe": "^8.0.0",
    "twilio": "^5.12.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.10",
    "@types/supertest": "^2.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "jest": "^29.7.0",
    "supertest": "^6.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "license": "MIT"
}